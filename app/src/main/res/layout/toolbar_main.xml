<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar_main"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/toolbar_text_size"
        android:text="@string/activity_label_books"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/toolbar_main_only_favorites"
        android:layout_width="@dimen/toolbar_favorite_size"
        android:layout_height="@dimen/toolbar_favorite_size"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/toolbar_margin"
        android:contentDescription="@string/toolbar_icon_favorite_desc"
        android:src="@drawable/ic_heart_empty" />
</androidx.appcompat.widget.Toolbar>
